{{!< default}}

<section id="blog">
<div class="inner">
    <h1>Blog</h1>

    {{! Each post will be output using this markup }}
    {{#foreach posts}}
    <article class="{{post_class}}">
        <fieldset><legend align="center"><h2><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></h2></legend></fieldset>
        <a href="{{url}}">
            <h1>{{{title}}}</h1>
            <p>{{excerpt}}&hellip;</p>
        </a>
    </article>
    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}
    
</div>
</section>