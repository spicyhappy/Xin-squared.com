{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<img src="{{asset "images/XinXin-Jiuzhaigou03.jpg"}}" alt="img-background">

<header class="vertical-align-parent">
    <div class="inner vertical-align">
        <h1>Blog</h1>
    </div>
</header>


{{! The main content area on the homepage }}
<main class="content white-background" role="main">
<div class="inner">
<section>
    {{! Each post will be output using this markup }}
    {{#foreach posts}}
    <article class="{{post_class}}">
        <h3 class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></h3>
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        <p>{{excerpt}}&hellip;</p>
    </article>
    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}
</section>
</div>
</main>